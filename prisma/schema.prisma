generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model Uppdrag {
    id              String      @id @default(cuid())
    author          User        @relation(fields: [authorId], references: [id])
    authorId        String
    year            Int
    nollk           String
    title           String
    desc            String
    place           String
    time            String
    participants    Int
    motivation      String
    private         Boolean
    status          UppdragStatus     @default(DRAFT)
}

enum UppdragStatus {
    APPROVED
    DENIED
    RETURN
    SUBMITTED
    DRAFT
}


model User {
  id       String    @id @default(cuid())
  name     String
  password String
  email    String    @unique
  nollk    String
  year     Int
  accepted Boolean   @default(false)
  Uppdrag  Uppdrag[]
}

enum UppdragStatus {
  APPROVED
  DENIED
  RETURN
  SUBMITTED
  DRAFT
}
